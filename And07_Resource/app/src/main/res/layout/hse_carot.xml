<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12pt"
            android:text="나의 당근"
            />

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="농성동 #3526967"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
          />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="중고거래는 이제 당근케이로 해보세요!"
            android:textAlignment="viewEnd"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="#E2E8A8"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_top_menu1"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_top_menu2"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_top_menu3"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="사장님 메뉴"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/t2"
                android:layout_below="@id/t1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu1"
                />

            <TextView
                android:id="@+id/t2_1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/t1"
                android:layout_marginStart="70dp"

                android:text="프로필 관리"

                />

            <ImageView
                android:id="@+id/t4"
                android:layout_below="@id/t2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu2"
                />

            <TextView
                android:id="@+id/t4_1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/t2_1"
                android:layout_marginStart="70dp"

                android:text="광고"
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="8pt"
                android:text="나의 활동" />

            <ImageView
                android:id="@+id/t6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/t5"
                android:src="@drawable/ic_menu3" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/t5"

                android:layout_marginStart="70dp"

                android:text="내 동네 설정" />

            <ImageView
                android:id="@+id/t8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/t6"
                android:src="@drawable/ic_menu4" />

            <TextView
                android:id="@+id/t9"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/t6"
                android:layout_marginStart="70dp"
                android:text="동네인증하기"


                />

            <ImageView
                android:id="@+id/t10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/t8"
                android:src="@drawable/ic_menu5" />

            <TextView
                android:id="@+id/t11"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/t9"
                android:layout_marginStart="70dp"
                android:text="키워드알림"


                />

            <ImageView
                android:id="@+id/t12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/t10"
                android:src="@drawable/ic_menu6" />

            <TextView
                android:id="@+id/t13"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/t11"
                android:layout_marginStart="70dp"
                android:text="모아보기"
                />

            <ImageView
                android:id="@+id/t14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/t12"
                android:src="@drawable/ic_menu4" />
            <TextView
                android:id="@+id/t15"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/t13"
                android:layout_marginStart="70dp"
                android:text="당근가계부"


                />
        </RelativeLayout>
    </LinearLayout>






</LinearLayout>









